# Node.js 18の公式イメージを使用
FROM node:18-alpine

# 作業ディレクトリを設定
WORKDIR /app

# パッケージファイルをコピー
COPY client/package*.json ./

# 依存関係をインストール
RUN npm ci

# アプリケーションコードをコピー
COPY client/ ./

# アプリケーションをビルド
RUN npm run build

# nginxを使用して静的ファイルを配信
FROM nginx:alpine
COPY --from=0 /app/build /usr/share/nginx/html
COPY nginx.conf /etc/nginx/nginx.conf

# ポート3000を公開
EXPOSE 3000

# nginxを起動
CMD ["nginx", "-g", "daemon off;"]
